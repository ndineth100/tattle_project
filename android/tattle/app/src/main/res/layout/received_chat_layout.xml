<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorIcon"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/contact_icon_symbol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/file2"
        android:elevation="4dp"
        android:padding="5dp"
        android:gravity="center" />

    <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_marginTop="18dp"-->
        <!--android:layout_toRightOf="@id/contact_icon_symbol"-->
        <!--android:src="@drawable/arrow_bg2" />-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="10dip"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/contact_icon_symbol"
        android:layout_marginLeft="3dp"
        card_view:cardBackgroundColor="#e8f5e9"
        android:background="@drawable/rounded_corner1">
        <TextView
            android:id="@+id/chatText"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Android"
            android:textColor="@color/colorWhite"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:id="@+id/date_txt"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:text="Jan 06"
        android:layout_alignRight="@id/card_view" />
</RelativeLayout>